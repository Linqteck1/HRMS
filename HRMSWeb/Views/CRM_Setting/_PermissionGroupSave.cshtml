
@model HRMSWeb.Models.AT_PermissionGroup

<style>
    .divfix {
        height: 400px;
        overflow-y: scroll;
        overflow-x: hidden;
    }
</style>

<div id="mymodalUpdateSection" class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Add Permission Group</h4>
        </div>
        <div class="modal-body">

            <form id="frmGroup">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label">Group Name :</label>
                        <div class="col-sm-8 col-md-8">
                            @Html.HiddenFor(model => model.PermissionGroupID)
                            @Html.HiddenFor(model => model.json_Permissions)
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Group Name", validate = "Validate", require = "Please Enter Group Name" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>


                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label"></label>
                        <div class="col-sm-4 col-md-4">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.IsActive)Active
                                </label>

                            </div>

                        </div>
                        <div class="col-sm-4 col-md-4">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.IsExtrapermission)Extra Permission
                                </label>

                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label">Permissions :</label>
                        <div class="col-sm-8 col-md-8 divfix">

                            <table id="tblPermission" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Allow
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{int j = 0;}
                                    @foreach (System.Data.DataRow item in (ViewBag.Permission as System.Data.DataTable).Rows)
                                    {
                                        <tr>
                                            <td>
                                                @item["Permission"]
                                                @Html.Hidden("PermissionID", item["PermissionID"])
                                                @Html.Hidden("PermissionGroupID", item["PermissionGroupID"])
                                            </td>

                                            <td>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBox("Allow", Convert.ToBoolean(item["Allow"]))
                                                    </label>
                                                </div>
                                            </td>




                                        </tr>
                                        j++;
                                    }
                                </tbody>
                            </table>


                        </div>


                    </div>




                </div>

            </form>


        </div>

        <div class="modal-footer">
            @if (CRM_Common.CheckPermissions(PermissionEnum.ManageGroupPermission, CRM_Common.GetControler(this.ViewContext)))
            {
            <button type="button" id="btnSave" class="btn btn-raised btn-success btn-sm">Save</button>
            }
            <button type="button" id="btnClose" class="btn btn-raised btn-danger btn-sm" data-dismiss="modal">Close</button>

        </div>
    </div>
</div>




