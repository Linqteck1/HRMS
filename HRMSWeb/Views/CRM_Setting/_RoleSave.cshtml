@model HRMSWeb.Models.AT_Role

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Role</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" role="form" id="frmRole">


                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label">Role Name :</label>
                        <div class="col-sm-8 col-md-8">
                            @Html.HiddenFor(model => model.RoleID)
                            @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", @placeholder = "Role Name" })
                            @Html.ValidationMessageFor(model => model.RoleName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label"></label>
                        <div class="col-sm-8 col-md-8">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.IsActive)Active
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            @if (CRM_Common.CheckPermissions(PermissionEnum.ManageRoles, CRM_Common.GetControler(this.ViewContext)))
            {
            @*<button type="button" id="btnRoleSave" class="btn btn-raised btn-success btn-sm">Save</button>*@
            <button type="button" class="btn btn-default btn-pure" id="btnClose" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="btnRoleSave">Save</button>
            }
            @*<button type="button" id="btnClose" class="btn btn-raised btn-danger btn-sm" data-dismiss="modal">Close</button>*@
        </div>
    </div>
</div>






<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

