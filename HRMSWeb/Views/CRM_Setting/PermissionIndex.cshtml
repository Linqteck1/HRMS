@model HRMSWeb.Models.AllPermissions
@{
    ViewBag.Title = "Index";
    Layout = null;
}
@{ HRMSWeb.Models.Session_CRM sess = (HRMSWeb.Models.Session_CRM)HttpContext.Current.Session["CRM_Session"]; }

<style>
    .divfix {
        height: 600px;
        overflow-y: scroll;
        overflow-x: hidden;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <!-- Latest posts -->
        <div class="panel panel-flat">


            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-sm-12">
                        @if (CRM_Common.CheckPermissions(PermissionEnum.ManageRoles, CRM_Common.GetControler(this.ViewContext)))
                        {
                            <a href="#" id="SaveChanges" _id="0" class="btn btn-raised btn-success btn-sm pull-right" data-toggle="modal"><i class="icon-floppy-disks position-left"></i>Save Changes</a>
                        }
                    </div>
                </div>
                @if (CRM_Common.CheckPermissions(PermissionEnum.ManageRoles, CRM_Common.GetControler(this.ViewContext)))
                {
                    <div class="row">

                        <div id="divPermissions" class="col-lg-12">
                            @Html.Hidden("RoleID", (object)ViewBag.RoleID)          
                                <div class="col-sm-2">
                                    <label>Module Name</label>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <div class="divfix">
                                            <h3>Permissions</h3><br />
                                            <table id="tblRolePermission" class="table table-middle table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Name
                                                        </th>

                                                        <th>
                                                            Allow
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (System.Data.DataRow item in (ViewBag.Permission as System.Data.DataTable).Rows)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item["Permission"]
                                                                @Html.Hidden("PermissionID", item["PermissionID"])
                                                                @Html.Hidden("RolePermissionJuncID", item["RolePermissionJuncID"])
                                                            </td>

                                                            <td>
                                                                <div class="checkbox">
                                                                    <label>
                                                                        @Html.CheckBox("Allow", Convert.ToBoolean(item["Allow"]))
                                                                    </label>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>


                                        </div>
                                    </div>

                                </div>
                            <div class="col-sm-2">
                                <label>Module Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <div class="col-sm-5 col-md-5 divfix">
                                        <h3>Groups</h3><br />
                                        <table id="tblGroup" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Name
                                                    </th>

                                                    <th>
                                                        Allow
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (System.Data.DataRow item in (ViewBag.PermissionGroup as System.Data.DataTable).Rows)
                                                {
                                                    <tr>
                                                        <td>
                                                            @item["Name"]
                                                            @Html.Hidden("RolePermissionJuncID", item["RolePermissionJuncID"])
                                                            @Html.Hidden("PermissionGroupID", item["PermissionGroupID"])
                                                        </td>
                                                        <td>
                                                            <div class="checkbox">
                                                                <label>
                                                                    @Html.CheckBox("Allow", Convert.ToBoolean(item["Allow"]), new { @class = "chkGroup" })
                                                                </label>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                            </div>

                            </div>



                        </div>
                   
                }

            </div>
            <!-- /latest posts -->
        </div>
    </div>



    <script type="text/javascript">
        $(document).ready(function () {



            $.onbody("click", "#SaveChanges", function () {
                debugger
                $.ajax({
                    url: '@Url.Content("~/CRM_Setting/PermissionSave")',
                    type: 'POST',
                    ContentType: 'application/json',
                    dataType: 'html',
                    data: {
                        strlstPermission: JSON.stringify(tblToJson($("#tblRolePermission tbody tr"))),
                        strlstGroup: JSON.stringify(tblToJson($("#tblGroup tbody tr"))), RoleID: $("#RoleID").val()
                    },
                    success: function (data) {
                        debugger
                        $("#DivPartial").html(data);
                        if ($('#lbmsg').val() == "Permission saved successfully!") {
                            showStatusMsgPopup("1", $('#lbmsg').val());
                            $('#tblRole').dataTable();
                        }
                        else {
                            showStatusMsgPopup("3", "An Error Occured while processing.");
                        }
                    }
                });
            });


            $.onbody("change", ".chkGroup", function () {
                debugger;
                $.ajax({
                    url: '@Url.Content("~/CRM_Setting/GetGroupPermission")',
                    type: 'POST',
                    ContentType: 'application/json',
                    dataType: 'json',
                    data: {
                        strlstPP: JSON.stringify(tblToJson($("#tblGroup tbody tr")))
                    },
                    success: function (data) {
                        $("#tblGroupPermission tbody tr").remove();
                        debugger;
                        $.each(data.lst, function (i, e) {
                            var tr = $("<tr/>");
                            tr.append("<td>" + e + "</td>")
                            $("#tblGroupPermission tbody").append(tr);
                        });
                    }
                });
            });



            $('.chkGroup').trigger('change');

        });

    </script>
